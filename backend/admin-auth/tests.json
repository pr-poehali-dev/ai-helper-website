{
  "tests": [
    {
      "name": "Test admin login with missing credentials",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Username and password required"
      }
    },
    {
      "name": "Test admin login with wrong username",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "wronguser",
        "password": "anypass"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Invalid credentials"
      }
    }
  ]
}